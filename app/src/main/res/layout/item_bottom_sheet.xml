<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/CardView.Dark"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Setup Language"
        android:fontFamily="@font/poppins_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/flagArab"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/arab"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mArabbtn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/arablanguage"
            android:textColor="?attr/colorControlNormal"
            android:textSize="18sp"
            android:gravity="start"
            app:iconGravity="textStart"
            app:strokeColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/flagInggris"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/english"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mInggrisbtn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/englishlanguage"
            android:textColor="?attr/colorControlNormal"
            android:textSize="18sp"
            android:gravity="start"
            app:iconGravity="textStart"
            app:strokeColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/flagIndonesia"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/indonesia"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mIndonesiabtn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/indonesialanguage"
            android:textColor="?attr/colorControlNormal"
            android:textSize="18sp"
            android:gravity="start"
            app:iconGravity="textStart"
            app:strokeColor="@color/black" />

    </LinearLayout>


</LinearLayout>